    <appender name="FLOW_LOG" class="com.zomu.t.epion.tropic.test.tool.core.logging.appender.FlowLoggingAppender"/>

    <appender name="COMMAND_LOG" class="com.zomu.t.epion.tropic.test.tool.core.logging.appender.CommandLoggingAppender"/>

    <logger name="CommandLog" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="COMMAND_LOG"/>
    </logger>

    <logger name="FlowLog" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FLOW_LOG"/>
    </logger>

    <logger name="org.thymeleaf" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="com.zomu.t.t3" level="${loggerLevel:-INFO}" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="${loggerLevel:-INFO}">
        <appender-ref ref="STDOUT"/>
    </root>

