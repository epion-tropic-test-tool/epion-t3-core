    <!--
       標準出力に出力する設定です。
    -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%date{ISO8601} %highlight(%-5le) %gray(%-30.30logger{30}) - %green(%msg) %n</pattern>
        </encoder>
        <withJasi>true</withJasi>
    </appender>

